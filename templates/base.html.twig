                    <a class="nav-link" href="{{ path('summoner_index') }}">Summoner</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="{{ path('champions_index') }}">Champions</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="{{ path('rank_index') }}">Classement</a>
                </li>
            </ul>
